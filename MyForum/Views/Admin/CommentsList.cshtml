@{
    if(ViewBag.IsAdmin == true)
    {
        Layout = "~/Views/Shared/AdminLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

<h4> All comments </h4>

 <table class="table">
            <thead>
                <tr>
                    <td><b>#</b></td>
                    <td><b>Author</b></td>
                    <td><b>Text</b></td>
                    <td><b>Action</b></td>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach(var comment in ViewBag.Comments)
                    {
                        <tr>
                        <td>@comment.CommentId</td>
                        <td><a href="~/User/UserPosts/@comment.UserId">@comment.UserName</a></td>
                        <td>@comment.CommentText</td>
                            <td>
                                  @{
                                      if(comment.IsAllow == true){
                                      <a class="btn btn-warning" href="~/Comment/Disallow/@comment.CommentId">
                                          Disallow
                                      </a>
                                      }
                                      else{
                                          <a class="btn btn-success" href="~/Comment/Allow/@comment.CommentId">
                                              Allow
                                          </a>
                                      }
                                  }
                                  <a class="btn btn-danger" href="~/Comment/Delete/@comment.CommentId">
                                        Delete
                                  </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>