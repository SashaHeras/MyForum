@model MyForum.Core.Models.Poll;
@{ 
    if(ViewBag.IsAdmin == true)
    {
        Layout = "~/Views/Shared/AdminLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

<form asp-action="CreatePoll" asp-controller="Poll">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Poll name</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Description</label>
        <textarea asp-for="Description"></textarea>
    </div>
    
    @{
        foreach(var i in ViewBag.Numbers)
        {
            <div class="form-group">
                <label class="control-label">Question №@i</label>
                <input type="text" name="@i" class="form-control" />
            </div>
        }
    }

    <input type="hidden" name="Count" value="@ViewBag.Count" />

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-default" />
    </div>
</form>
