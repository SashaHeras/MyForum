@model MyForum.Core.Models.Complaint
@{
    if(ViewBag.IsAdmin == true)
    {
        Layout = "~/Views/Shared/AdminLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    ViewData["Title"] = "Add post";
}

<form asp-action="ComplaintCreate" asp-controller="Post">
    <div class="form-group">
        <label asp-for="Description" class="control-label">Description</label>
        <textarea asp-for="Description" class="description"></textarea>
    </div>
    <div class="form-group">
        <input asp-for="PostId" type="hidden" value=@ViewBag.PostId />
    </div>
    </br>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-default" />
    </div>
</form>
