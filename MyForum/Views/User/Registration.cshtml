@model MyForum.Data.Models.User
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="RegistrationUser" asp-controller="User">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Name:</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    </br>
    <div class="form-group">
        <label asp-for="Surname" class="control-label">Surname:</label>
        <input type="text" asp-for="Surname" class="form-control" />
    </div>
    </br>
    <div class="form-group">
        <label asp-for="Age" class="control-label">Age:</label>
        <input type="number" asp-for="Age" class="form-control" />
    </div>
    </br>
    <div class="form-group">
        <label asp-for="Address" class="control-label">Address:</label>
        <input type="text" asp-for="Address" class="form-control" />
    </div>
    </br>
    <div class="form-group">
        <label asp-for="Email" class="control-label">E-mail:</label>
        <input type="text" asp-for="Email" class="form-control" />
    </div>
    </br>
    <div class="form-group">
        <label asp-for="Password" class="control-label">Password:</label>
        <input type="text" asp-for="Password" class="form-control" />
    </div>
    </br>
    <div class="form-group">
        <input type="submit" value="Log up" class="btn btn-default" />
    </div>
</form>

<div>
    <a href="~/User/Login">You have acount?</a>
</div>