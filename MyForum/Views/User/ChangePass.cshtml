@model MyForum.ViewModels.ChangePassViewModel
@{
    if(ViewBag.IsAdmin == true)
    {
        Layout = "~/Views/Shared/AdminLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

<form asp-action="SentNewPass" asp-controller="User">
    <table>
        <tr>
            <td class="form-group" style="text-align: right;">
                <label asp-for="oldPass" class="control-label">Old password:</label>
            </td>
            <td class="form-group" style="padding-left: 8px">
                <input type="password" asp-for="oldPass" class="form-control" style="margin:5px"/>
            </td>
        </tr>
        <tr style="margin:5px">
            <td class="form-group" style="text-align: right">
                <label asp-for="newPass" class="control-label">New password:</label>
            </td>
            <td class="form-group" style="padding-left: 8px">
                <input type="password" asp-for="newPass" class="form-control" style="margin:5px"/>
            </td>
        </tr>
        <tr style="margin:5px">
            <td class="form-group" style="text-align: right">
                <label asp-for="newPassConfign" class="control-label">Confign new password:</label>
            </td>
            <td class="form-group" style="padding-left: 8px">
                <input type="password" asp-for="newPassConfign" class="form-control" style="margin:5px"/>
            </td>
        </tr>
    </table>
    <br />
    <table>
        <tr>
            <td>
                <div class="form-group" style="margin: 5px">
                    <input type="submit" style="width: 100px" value="Change" class="btn btn-default" />
                </div>
            </td>
        </tr>
    </table>
</form>

