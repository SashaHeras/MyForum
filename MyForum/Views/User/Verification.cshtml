@{
    if(ViewBag.IsAdmin == true)
    {
        Layout = "~/Views/Shared/AdminLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

@using (Html.BeginForm("ComplateVerification", "User", FormMethod.Post))
{
    <table>
        <tr>
            <td class="form-group" style="padding-left: 8px">
                <input type="text" name="pass" class="form-control" style="margin: 3px"/>
            </td>
            <td style="margin:5px">
                <div class="form-group" style="margin: 5px">
                    <input class="btn btn-success" type="submit" style="width: 100px" value="Verify"  />
                </div>
            </td>
        </tr>
    </table>
}

