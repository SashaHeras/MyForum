@{
    if(ViewBag.IsAdmin == true)
    {
        Layout = "~/Views/Shared/AdminLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

<h2 class="cursive-left" style="color: #D2691E; "> All post made by @ViewBag.UsersName: </h2><br>

<p> Posts` mark average:  @ViewBag.AverageMark </p>

@{
    foreach (var post in ViewBag.UserPosts)
    {
        <a id="containerTopic" href="~/Post/Post/@post.PostId">
            @post.PostName
        </a>
        <br>
        <br>
    }
}