@model MyForum.Controllers.Data.Models.User
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="LoginUser" asp-controller="User">
    <div class="form-group">
        <label asp-for="Email" class="control-label">E-mail:</label>
        <input type="text" asp-for="Email" class="form-control" />
    </div>
    </br>
    <div class="form-group">
        <label asp-for="Password" class="control-label">Password:</label>
        <input type="text" asp-for="Password" class="form-control" />
    </div>
    </br>
    <table>
        <tr>
            <td>
                <div class="form-group" style="margin: 5px">
                    <input type="submit" style="width: 100px" value="Log in" class="btn btn-default" />
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div style="margin: 5px">
                    <a href="~/User/Registration">You haven`t acount?</a>
                </div>
            </td>
        </tr>
    </table>
</form>

